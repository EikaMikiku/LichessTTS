{
	"manifest_version": 2,
	"name": "Lichess Text To Speech",
	"short_name": "Lichess TTS",
	"author": "Eika Mikiku",
	"version": "1.0.0",
	"description": "Uses text to speech to pronounce moves played on Lichess",
	"content_scripts": [{
		"run_at" :"document_end",
		"matches": ["https://lichess.org/*"],
		"js": ["script.js"]
	}],
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_icon": "knight48.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "knight48.png",
		"48": "knight48.png",
		"128": "knight128.png"
	}
}